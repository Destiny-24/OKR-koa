.sea-container {
  position: relative;
  overflow: hidden;
  height: 100vh;
  width: 100%;
  background-color: whitesmoke;
  background-image: linear-gradient(
    #f1f1f1,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, 0.5));
}
.content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 120rpx;
}

.content .title{
  color: #333;
  font-size: 22px;
  letter-spacing: 1px;
  margin-bottom: 10rpx;
}
.content .desc{
  color: #666;
  font-size: 16px;
}

.objective-list{
  margin-top: 40px;
  color: #999;
  font-size: 12px;
  line-height: 22px;
}

/*登录按钮*/
.login-btn{
  position: fixed;
  left: 50%;
  bottom: 80rpx;
  margin-left: -260rpx;
  width: 520rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #666;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
}

.login-btn_hover{
  opacity: .8;
}