.page-container{
  display: flex;
  flex-direction: column;
}

.page-form{
  flex: 1;
}

.form-item{
  position: relative;
  margin-bottom: 10px;
  padding-right: 60px;
}

.form-label{
  color: #333;
  font-size: 12px;
  line-height: 20px;
}

.form-input{
  display: block;
  width: 100%;
  height: 40px;
  border: 1px solid #333;
  padding: 0 8px;
  font-size: 16px;
  line-height: 38px;
}

.form-ctrl{
  position: absolute;
  top: 20px;
  right: 0;
  display: inline-block;
  width: 40px;
  height: 40px;
  text-align: center;
  color: #fff;
  line-height: 40px;
  font-size: 18px;
  background: #999;
}


.submit-btn{
  width: 100%;
  height: 80rpx;
  background-color: #666;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
}

.submit-btn_hover{
  opacity: .8;
}