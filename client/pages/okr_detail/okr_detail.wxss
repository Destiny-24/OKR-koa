.page-container{
  display: flex;
  flex-direction: column;
}

.page-content{
  flex: 1;
}

.objective-item{
  position: relative;
  background: #f5f5f5;
  padding: 10px;
  margin-bottom: 5px;
  overflow: hidden;
}

.objective-item.finished:after{
  position: absolute;
  top: -20px;
  right: -20px;
  width: 80px;
  height: 80px;
  border: 2px solid #999;
  content: '完成';
  line-height: 78px;
  text-align: center;
  font-size: 22px;
  color: #999;
  border-radius: 50%;
  opacity: .4;
  transform: rotate(-45deg);
}

.objective-item--hover{
  background-color: #f1f1f1;
}

.objective-title{
  font-size: 14px;
  line-height: 20px;
  color: #333;
  margin-bottom: 4px;
}

.objective-created_time{
  font-size: 12px;
  color: #999;
}

.keyresult-list{
  position: relative;
  padding: 40rpx 0;
  padding-left: 80rpx;
  background-color: #fff;
}

.keyresult-list:before{
  content: '';
  width: 1px;
  height: 100%;
  background-color: #f5f5f5;
  position: absolute;
  top: 0;
  left: 40rpx;
}


.keyresult-item{
  position: relative;
  border-bottom: 1px solid #f5f5f5;
  font-size: 14px;
  line-height: 1.5;
  margin-top: 20rpx;
}

.keyresult-item--hover .keyresult-info{
  opacity: .8;
  background: #f1f1f1;
}

.keyresult-item:after{
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  position: absolute;
  top: 10rpx;
  left: -50rpx;
}

.keyresult-item.finished:after{
  background-color: #999;
}

.keyresult-item:last-child{
  border-bottom: none;
}

.keyresult-info{
  display: flex;
  font-size: 14px;
  color: #666;
}

.keyresult-title{
  flex: 1;
  font-size: 14px;
  color: #666;
}

.keyresult-tag{
  font-size: 12px;
  color: #999;
  margin-right: 4px;
}

.todos-list{
  margin-top: 20rpx;
}

.todo-title{
  font-size: 12px;
  line-height: 24px;
  color: #999;
}

.todo-title.finished{
  text-decoration: line-through;
}
.edit-btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #666;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
  text-align: center;
}

.edit-btn_hover{
  opacity: .8;
}
