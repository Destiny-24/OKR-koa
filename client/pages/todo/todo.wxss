.todo-tips{
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.todo-input{
  display: block;
  width: 100%;
  height: 40px;
  border: 1px solid #333;
  padding: 0 8px;
  font-size: 16px;
  line-height: 38px;
  margin-bottom: 10px;
}

.todo-item{
  background: #f5f5f5;
  padding: 10px;
  margin-bottom: 5px;
  overflow: hidden;
}

.todo-title{
  font-size: 14px;
  line-height: 20px;
  color: #333;
  margin-bottom: 4px;
}

.todo-created_time{
  font-size: 12px;
  color: #999;
}